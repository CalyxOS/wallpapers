{
<%
  categories = {}
  @images.each do |image|
    image.tags.split(',').each do |tag|
      categories[tag.strip] = true
    end
  end
  categories = categories.keys
%>  "Categories": [
<% categories.each do |cat| %>
    { "name": "<%= cat %>" }<%= cat == categories.last ? "" : "," %>
<% end %>
  ],
  "Wallpapers": [
<% @images.each do |image| %>
    {
       "author": "<%= image.author %>",
       "url": "<%= File.join BASE_URL, image.image_url %>",
       "thumbUrl": "<%= File.join BASE_URL, image.thumbnail_url %>",
       "name": "<%= image.name %>",
       "category": "<%= image.tags %>",
    }<%= image == @images.last ? "" : "," %>
<% end %>
  ]
}