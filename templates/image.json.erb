<% tags = @image.tags.split(/[\s,]+/) %>
{
  "id": "<%= @image.id %>",
  "description": "<%= @image.name %>",
  "width": "",
  "height": "",
  "color": "<%= @image.color %>",
  "tags": [
<% tags.each do |tag| %>
    {"title": "<%= tag %>"}<%= tag == tags.last ? "" : "," %>
<% end %>
  ],
  "user": {
    "name": "<%= @image.author %>",
    "links": {
      "webUri": "<%= @image.info_url %>"
    }
  },
  "urls": {
    "full": "<%= File.join BASE_URL, @image.image_url %>",
    "thumb": "<%= File.join BASE_URL, @image.thumbnail_url %>"
  },
  "links": {
    "webUri": "<%= @image.info_url %>"
  }
}
